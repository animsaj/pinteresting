<% include ./partials/header %>

<div class="ui main text container raised segment">
	<div class="ui huge header">Edit This Pin</div>
	<form class="ui form" action="/wall/<%= pin._id %>?_method=PUT" method="POST">
		<div class="field">
			<label>Image URL</label>
			<input type="text" name="pin[url]" value="<%= pin.url %>">
		</div>
		<div class="field">
			<label>Description</label>
			<input type="text" name="pin[description]" value="<%= pin.description %>">
		</div>
		<input class="ui blue big basic button" type="submit" value="Submit The Changes">
	</form>
</div>

<%include ./partials/footer %>